<%- if spree_current_user %>
  <%- lp_balance = spree_current_user.energy_coins %>
  <%- equivalent_currency_balance = spree_current_user.loyalty_points_equivalent_currency %>
  <%= I18n.t('spree.loyalty_points_balance') %>: <%= lp_balance %><%= "($" + equivalent_currency_balance.to_s + ")" %>
  <%- lp_needed = @order.loyalty_points_for(@order.total, 'redeem') %>
  <br/><%= I18n.t('spree.loyalty_points_needed') %>: <%= lp_needed %>
  <% if lp_needed > lp_balance %>
    <br/><b><%= I18n.t('spree.insufficient_balance') %></b>
  <% end %>
<%- end %>
